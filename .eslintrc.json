{
  "extends": "./node_modules/gts/",
  "rules": {
    "arrow-parens": "error"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "object-curly-spacing": ["error", "always"],
        "array-bracket-spacing": ["error", "always"],
        "computed-property-spacing": ["error", "never"],
        "arrow-parens": ["error", "as-needed"]
      }
    }
  ]
}
